    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="27dp"
        android:text="Connexion"
        android:id="@+id/activity_main_connectBtn"
        android:layout_below="@id/activity_main_login"
        android:layout_centerHorizontal="true" />

    <!--android:layout_below="@+id/activity_main_pswdField"-->

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Créer un compte"
        android:id="@+id/activity_main_createAccountBtn"
        android:layout_marginTop="11dp"
        android:layout_below="@+id/activity_main_connectBtn"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="15dp"/>

    <View
        android:id="@+id/SplitLine"
        android:layout_width="match_parent"
        android:layout_height= "2dp"
        android:background="@color/gray"
        android:layout_below="@+id/activity_main_createAccountBtn"
        android:layout_marginBottom="15dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Jouer en tant qu'invité"
        android:id="@+id/activity_main_inviteBtn"
        android:layout_below="@+id/SplitLine"
        android:layout_centerHorizontal="true" />


    </RelativeLayout>

